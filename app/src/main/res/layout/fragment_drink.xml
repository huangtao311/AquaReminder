<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DrinkFragment"
    android:background="@drawable/background1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_fit"
            android:layout_marginLeft="16dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/fit"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            android:text="喝水提醒"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:textSize="25sp"/>

        <ImageView
            android:id="@+id/iv_clock"
            android:layout_marginLeft="50dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/clock"
            android:layout_gravity="center"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="90dp">

        <ImageView
            android:id="@+id/iv_bottle"
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bottle"/>
        <com.mountisome.aquareminder.utils.Histogram
            android:id="@+id/bottle"
            android:layout_width="88dp"
            android:layout_height="180dp"
            android:layout_marginLeft="154dp"
            android:layout_marginTop="66dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="350dp">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/tea"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/coffee"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/milk"/>
        <Button
            android:id="@+id/btn_add"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="130dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/add"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="115dp"
            android:background="@drawable/drinks"/>

    </RelativeLayout>



</FrameLayout>
